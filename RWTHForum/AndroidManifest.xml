<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rwthforum"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.rwthforum.SplashAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.rwthforum.DemandTokenAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.rwthforum.WelcomeAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.rwthforum.CourseRoomAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.rwthforum.WaitForVerificationAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
         <activity
            android:name="com.example.rwthforum.GetThreadsAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.rwthforum.GetPostsAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.rwthforum.AddPostAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.example.rwthforum.AddThreadAct"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize" >
        </activity>
    </application>

</manifest>